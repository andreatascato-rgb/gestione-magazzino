// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Magazzini
model Warehouse {
  id            String          @id @default(cuid())
  name          String
  address       String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  stockLevels   StockLevel[]
  stockMovements StockMovement[]
}

// Prodotti
model Product {
  id            String          @id @default(cuid())
  name          String
  description   String?
  sku           String?         @unique
  price         Decimal         @default(0) @db.Decimal(10, 2)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  stockLevels   StockLevel[]
  stockMovements StockMovement[]
}

// Livello di scorta per prodotto/magazzino
model StockLevel {
  id          String      @id @default(cuid())
  productId   String
  warehouseId String
  quantity    Int         @default(0)
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  warehouse   Warehouse   @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([productId, warehouseId])
  @@index([productId])
  @@index([warehouseId])
}

// Clienti
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Casse
model CashRegister {
  id            String         @id @default(cuid())
  name          String
  initialBalance Decimal       @default(0) @db.Decimal(10, 2)
  currentBalance Decimal       @default(0) @db.Decimal(10, 2)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  cashMovements CashMovement[]
}

// Movimentazioni Merce
model StockMovement {
  id          String    @id @default(cuid())
  productId   String
  warehouseId String
  type        MovementType
  quantity    Int
  reason      String?
  date        DateTime  @default(now())
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@index([productId])
  @@index([warehouseId])
  @@index([date])
}

// Movimentazioni Denaro
model CashMovement {
  id            String        @id @default(cuid())
  cashRegisterId String
  type          MovementType
  amount        Decimal       @db.Decimal(10, 2)
  description   String?
  date          DateTime      @default(now())
  cashRegister  CashRegister  @relation(fields: [cashRegisterId], references: [id], onDelete: Cascade)
  createdAt     DateTime      @default(now())

  @@index([cashRegisterId])
  @@index([date])
}

enum MovementType {
  IN
  OUT
}

